#!/bin/bash
name=`basename "$0"`
if [ $name = bspcxx ]; then
  cc=@MPI_CXX_COMPILER@
else
  cc=@MPI_C_COMPILER@
fi
cxx=@MPI_CXX_COMPILER@
bsponmpi="@BSPONMPI_LIB@"
cflags="-I@BSPONMPI_INCLUDE@"

linking=yes
read_sources=no
read_output=no
read_linker=no
show=

objdir=
sources=()
objects=()
compile_flags=()
link_flags=()
output_flag=()

function onexit_clean()
{
    rm -f "${objects[@]}"
    rmdir "$objdir"
}

trap onexit_clean EXIT


function add_source()
{
    sources=( "${sources[@]}" "$1" )
} 

function add_compile_flag()
{
    compile_flagss=( "${compile_flagss[@]}" "$1" )
}

function add_link_flag()
{
    link_flags=( "${link_flags[@]}" "$1" )
} 


for arg
do

  case $arg in

    -show) show=echo
        ;;

    -c) linking=no
        add_compile_flag "$arg"
        ;;

    -o) read_output=yes
        ;;

    --) read_sources=yes
        add_compile_flag "$arg"
        ;;

    -l*)   add_link_flag "$arg"
        ;;

    -Wl,*) add_link_flag "$arg"
        ;;

    -Xlinker) add_link_flag "$arg"
           read_linker=yes
        ;;

    -*) if [ x$read_linker = "xyes" ]; then
          add_link_flag "$arg"
          read_linker=no
        elif [ x$read_output = "xyes" ]; then
          output_flag=("-o" "$arg" )
          read_output=no
        elif [ x$read_sources = xyes ]; then
          add_source "$arg"
        else
          add_compile_flag "$arg"
        fi
        ;;
    
    *)  if [ x$read_linker = "xyes" ]; then
          add_link_flag "$arg"
          read_linker=no
        elif [ x$read_output = "xyes" ]; then
          output_flag=("-o" "$arg" )
          read_output=no
        else
          add_source "$arg"
        fi
        ;;
  esac
done


if [ x$linking = xno ]; then
  $show $cc $cflags "${sources[@]}" "${compile_flags[@]}" "${link_flags[@]}" \
      "${output_flag[@]}"
  exit_status=$?
else

  objdir=`mktemp -d`
  for s in "${sources[@]}"
  do
    obj="${objdir}/${s%.c}.o"
    objects=( "${objects[@]}" "$obj" )
    $show $cc $cflags "$s" -c -o "$obj" "${compile_flags[@]}" || { exit $?; }
  done

  $show $cxx $cflags "${objects[@]}" "${output_flag[@]}" "${compile_flags[@]}" \
      "${link_flags[@]}" $bsponmpi
  exit_status=$?
fi


exit $exit_status
